{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**",
                "!.next/cache/**",
                "public/registry/**"
            ]
        },
        "@zuro/templates#build": {
            "cache": false
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}